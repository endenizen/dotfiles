" nocompatible
set nocompatible

" no backups
set nobackup
set nowritebackup

" show handy things
set ruler
set number
set showcmd

" search stuff
set incsearch

" tabs
set tabstop=2
set shiftwidth=2
set expandtab

" status bar
set laststatus=2

" comma for leader
let mapleader = ","

" colors
set t_Co=256
colorscheme zenburn
set background=dark
syntax on
